<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Book Collection(is this it)?</title>
    <link rel="stylesheet" href="styles/base.css">
    <link rel="stylesheet" href="styles/reset.css">
  </head>
  <body>
    <%- include ../layout/header %>
    <main>
      <br>
      <h1>Your current Library you bad ass reader:</h1>
      <ul>
        <% books.forEach(book => { %>
    
          <li>
            <h3><%= book.title %></h3>
            <h3>Author: <%= book.author %></h3>
            <img src= "<%= book.image_url %>"/>
            <h3>Description: <%= book.description %></h3>
            <h3>ISBN: <%= book.isbn %></h3>
    
            <form action="/book" method="POST">
              <input type="hidden" value="<%= book.title %>" name="title">
              <input type="hidden" value="<%= book.author %>" name="author">
              <input type="hidden" value="<%= book.isbn %>" name="isbn">
              <input type="hidden" value="<%= book.image_url %>" name="image_url">
              <input type="hidden" value="<%= book.description %>" name="description">
            <input type="submit" value="submit">
            </form>
          </li>
    
        <% }) %>
    </main>
  </body>
</html>